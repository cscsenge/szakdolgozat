<Page
    x:Class="szd1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:szd1.Converters"
    mc:Ignorable="d" Height="800" Width="1200" BorderBrush="Aqua">
    <Page.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <local:MapToGeometryConverter x:Key="MapToGeometry"/>
    </Page.Resources>
    <Grid x:Name="mainGrid" BorderBrush="Black" BorderThickness="1">
        <Button x:Name="fillominoButton" Content="Fillomino" HorizontalAlignment="Center" Margin="0,0,0,100" VerticalAlignment="Center" Click="FillominoClick" Visibility="{x:Bind viewModel.IsInMenu, Mode=OneWay, Converter={StaticResource BoolToVisibility}}"/>
        <Button x:Name="stickyButton" Content="Sticky Blocks" HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Center" Click="StickyBlocksClick" Visibility="{x:Bind viewModel.IsInMenu, Mode=OneWay, Converter={StaticResource BoolToVisibility}}"/>
        <Grid x:Name="gameGrid" BorderBrush="Black" BorderThickness="1" Visibility="{x:Bind viewModel.IsInFillomino, Mode=OneWay, Converter={StaticResource BoolToVisibility}}" Width="600" Height="600" VerticalAlignment="Top" HorizontalAlignment="Right"/>
        <ItemsControl ItemsSource="{x:Bind viewModel.StickyArray, Mode=OneWay, Converter={StaticResource MapToGeometry}}" Visibility="{x:Bind viewModel.IsInSticky, Mode=OneWay, Converter={StaticResource BoolToVisibility}}">
            <ItemsControl.ItemsPanel >
                <ItemsPanelTemplate>
                    <Canvas Width="800" Height="480" Background="Beige" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        <Button Content="Back" HorizontalAlignment="Right"  Margin="0,0,0,0" VerticalAlignment="Bottom" Visibility="{x:Bind viewModel.IsInFillomino, Mode=OneWay, Converter={StaticResource BoolToVisibility}}" Click="FillominoBackButtonClick"/>
        <Button Content="Back" HorizontalAlignment="Right"  Margin="0,0,0,0" VerticalAlignment="Bottom" Visibility="{x:Bind viewModel.IsInSticky, Mode=OneWay, Converter={StaticResource BoolToVisibility}}" Click="StickyBackButtonClick"/>
    </Grid>
</Page>
